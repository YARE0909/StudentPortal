@page
@model StudentPortal.Pages.Admin.ManagePaymentsModel
@{
    ViewData["Title"] = "Manage Payments";
}

<div class="min-h-screen bg-[#1A1A1A] p-6">
    <div class="max-w-7xl mx-auto rounded-lg p-8">
        <h2 class="text-3xl font-bold text-white mb-6 text-start">Manage Payments</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-600 rounded-lg">
                <thead>
                    <tr class="bg-[#292929] text-left">
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Student</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Amount (MYR)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Method</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Date</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    @foreach (var p in Model.Payments)
                    {
                        <tr class="border-t border-[#3C3C3C] hover:bg-[#252525] transition">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@p.Student.FirstName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@p.Amount.ToString("C", new System.Globalization.CultureInfo("ms-MY"))</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@p.PaymentMethod</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@p.PaymentDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
