@page
@model StudentPortal.Pages.Admin.RespondEnquiryModel
@{
    ViewData["Title"] = "Respond to Enquiry";
}

<div class="bg-[#1A1A1A] p-8 flex items-center justify-center">
    <div class="bg-[#292929] rounded-lg shadow-lg p-8 w-full max-w-lg">
        <h1 class="text-4xl font-bold text-center mb-6">Respond to Enquiry</h1>

        <div class="mb-6">
            <p class="text-lg font-semibold text-white">Subject: @Model.Enquiry.Subject</p>
            <p class="text-gray-300 mb-2"><strong>Message: </strong>@Model.Enquiry.Message</p>
            <p class="text-sm text-gray-400 mb-4"><strong>Date: </strong>@Model.Enquiry.CreatedAt.ToString("g")</p>
        </div>

        <form method="post" class="space-y-4">
            <div>
                <label asp-for="Response" class="block text-white font-medium mb-1">Your Response</label>
                <textarea asp-for="Response" rows="5" class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400"></textarea>
                <span asp-validation-for="Response" class="text-red-400 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
                Submit Response
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
