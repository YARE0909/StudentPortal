<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GroupAssignmentStudentRegistration</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GroupAssignmentStudentRegistration.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body class="bg-[#1A1A1A] text-gray-100 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-[#292929] text-white py-4 px-6">
        <div class="container mx-auto flex justify-between items-center">
            <a class="text-xl font-bold text-white hover:text-fuchsia-400 transition" asp-area="" asp-page="/Index">
                EduSphere
            </a>
            <nav class="space-x-6 hidden sm:block">
                @if (User?.Identity != null && User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Dashboard/AdminDashboard">Admin Dashboard</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/ManageInvoices">Manage Invoices</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/ManageStudents">Manage Students</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/ManageCourses">Manage Courses</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/ManageTimetable">Manage Timetable</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/ManageEnrollments">Manage Enrollments</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/CourseEvaluations">View Evaluations</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Admin/ManageEnquiries">Enquiries</a>
                        <a class="hover:text-fuchsia-400 transition" asp-page="/Account/AdminLogout">Logout</a>
                    }
                    else
                    {
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/Dashboard">Dashboard</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/EnrollCourses">Enroll Courses</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/ViewTimetable">Timetable</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Payments/MakePayment">Make Payment</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Payments/PaymentHistory">Payment History</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/AddDropHistory">Add/Drop History</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/EvaluateCourse">Evaluate Course</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/MakeEnquiry">Contact Us</a>
                        <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Student/Profile">Profile</a>
                        <a class="hover:text-fuchsia-400 transition" asp-page="/Account/StudentLogout">Logout</a>
                    }
                }
                else
                {
                    <!-- User is not logged in -->
                    <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Index">Home</a>
                    <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Privacy">Privacy</a>
                    <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Account/Login">Login</a>
                    <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Account/Register">Register</a>
                }
            </nav>
        </div>
    </header>


    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-[#292929] text-sm text-gray-400 py-4 text-center">
        &copy; 2025 - EduSphere
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
