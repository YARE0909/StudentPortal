<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GroupAssignmentStudentRegistration</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GroupAssignmentStudentRegistration.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        /* Header */
        header {
            background-color: #292929;
            padding: 10px 0;
        }

            /* Nav UL */
            header nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
                justify-content: space-between; /* Distribute items */
                align-items: center;
                padding-left: 20px;
            }

                /* Nav items */
                header nav ul li {
                    position: relative;
                    margin-right: 20px;
                }

                    header nav ul li:last-child {
                        margin-left: auto;
                        margin-right: 0;
                    }

                    header nav ul li a {
                        display: block;
                        padding: 10px 15px;
                        text-decoration: none;
                        color: #f5f5f5; /* Light text on dark background */
                        transition: color 0.3s ease;
                    }

                        header nav ul li a:hover {
                            color: #d946ef; /* Tailwind's fuchsia-400 */
                        }

                    /* Dropdown styles */
                    header nav ul li.dropdown a {
                        cursor: pointer;
                    }

        /* Dropdown content */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #1F1F1F;
            min-width: 180px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            z-index: 1;
            left: 0;
            border-radius: 0.25rem;
            overflow: hidden;
        }

            .dropdown-content a {
                color: #e5e5e5;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #333333;
                    color: #d946ef;
                }

        /* Show dropdown on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* Logout button */
        .logout-button {
            background-color: #d946ef;
            color: white;
            padding: 10px 15px;
            border-radius: 0.375rem;
            transition: background-color 0.3s ease;
        }

            .logout-button:hover {
                background-color: #a21caf;
            }

        /* Logout link alignment */
        header nav ul li:last-child a {
            display: inline-block;
            padding: 10px 15px;
        }

    </style>
</head>
<body class="bg-[#1A1A1A] text-gray-100 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-[#292929] text-white py-4 px-6">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Dynamic link for EduSphere based on user role -->
            <a class="text-xl font-bold text-white hover:text-fuchsia-400 transition">
          
              
                EduSphere
            </a>
            <nav class="space-x-6 hidden sm:block">
                @if (User?.Identity != null && User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <header>
                            <nav>
                                <ul>
                                    <li class="dropdown">
                                        <a href="#">Dashboard<span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Dashboard/AdminDashboard">back to Dashboard</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Online Enrollment <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Admin/ManageEnrollments">Manage Enrollments</a></li>
                                            <li><a href="/Admin/ManageCourses">Manage Courses</a></li>
                                            <li><a href="/Admin/RegistrationSession">Open/Close Sessions</a></li>

                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Enquiries <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Admin/ManageEnquiries">Manage Enquiries</a></li>
                                            <li><a href="/Admin/ManageClashes">Manage Clashes</li>
                                            <li><a href="/Admin/CourseEvaluations">Course Evaluation</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Statement <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Admin/ManageInvoices">Manage Invoices</a></li>
                                            <li><a href="/Admin/ManagePayments">Manage Payments</a></li>

                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Students<span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Admin/ManageStudents">Manage Students</a></li>

                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Timetable <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Admin/ManageTimetable">Manage Timetable</a></li>
                                            <li><a href="/Admin/ViewClashing">View Clashing</a></li>
                                        </ul>
                                    </li>

                                    <li style="float:right;">
                                        <a href="/Account/AdminLogout" class="logout-button">Logout</a>
                                    </li>
                                </ul>
                            </nav>
                        </header>
                    }
                    else
                    {
                        <header>
                            <nav>
                                <ul>
                                    <li class="dropdown">
                                        <a href="#">Dashboard<span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Student/Dashboard">Dashboard</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Online Enrollment <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Student/AddDropHistory">Add Drop History</a></li>
                                            <li><a href="/Student/EnrollCourses">Enroll This Semester</a></li>

                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Enquiries <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Student/MakeEnquiry">Make An Enquiry</a></li>
                                            <li><a href="/Student/TimetableMatching">Timetable Matching</a></li>
                                            <li><a href="/Student/TimetableClashes">View Timetable Request</a></li>
                                            <li><a href="/Student/EvaluateCourse">Evaluate Courses</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Statement <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Student/ViewTimetable">View Timetable</a></li>
                                            <li><a href="/Payments/StudentStatement">View Student Statement</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Payment<span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Payments/MakePayment">Make Payment</a></li>
                                            <li><a href="/Payments/PaymentHistory">Payment History</a></li>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#">Account <span style="font-size: 0.8em;">&#9660;</span></a>
                                        <ul class="dropdown-content">
                                            <li><a href="/Student/Profile">Change Details</a></li>
                                        </ul>
                                    </li>

                                    <li style="float:right;">
                                        <a href="/Account/StudentLogout" class="logout-button">Logout</a>
                                    </li>
                                </ul>
                            </nav>
                        </header>
                    }
                }
                else
                {

                    <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Account/Login">Login</a>
                    <a class="hover:text-fuchsia-400 transition" asp-area="" asp-page="/Account/Register">Register</a>
                }
            </nav>
        </div>
    </header>


    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-[#292929] text-sm text-gray-400 py-4 text-center">
        &copy; 2025 - EduSphere
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
