@page
@model StudentPortal.Pages.Student.EvaluateCourseModel
@{
    ViewData["Title"] = "Course Evaluation";
}

<div class="bg-[#1A1A1A] flex items-center justify-center p-8">
    <div class="bg-[#292929] rounded-lg shadow-lg p-8 w-full max-w-lg">
        <h1 class="text-4xl font-bold text-white text-center mb-6">Course Evaluation</h1>

        @if (TempData["Message"] != null)
        {
            <div class="mb-6 p-4 rounded bg-green-600 text-white font-semibold text-center">
                @TempData["Message"]
            </div>
        }

        <form method="post" class="space-y-6">
            <div>
                <label asp-for="NewEvaluation.CourseId" class="block text-white font-medium mb-1">Course</label>
                <select asp-for="NewEvaluation.CourseId" asp-items="Model.CourseOptions" class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:ring focus:border-blue-400">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="NewEvaluation.CourseId" class="text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="NewEvaluation.Rating" class="block text-white font-medium mb-1">Rating (1 to 5)</label>
                <input asp-for="NewEvaluation.Rating" type="number" min="1" max="5" class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:ring focus:border-blue-400" />
                <span asp-validation-for="NewEvaluation.Rating" class="text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="NewEvaluation.Feedback" class="block text-white font-medium mb-1">Feedback</label>
                <textarea asp-for="NewEvaluation.Feedback" rows="4" class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:ring focus:border-blue-400"></textarea>
                <span asp-validation-for="NewEvaluation.Feedback" class="text-red-400 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
                Submit Evaluation
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
