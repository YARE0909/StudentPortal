@page
@model StudentPortal.Pages.Account.AdminLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EduSphere Admin Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .alert-message {
            display: none;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .alert-success {
            background-color: #4CAF50;
            color: white;
        }

        .alert-error {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>
<body class="bg-[#121212] flex items-center justify-center min-h-screen">
    <div class="flex flex-col md:flex-row items-center justify-center space-y-8 md:space-y-0 md:space-x-16">
        <!-- Login Card -->
        <div class="bg-[#1E1E1E] p-8 rounded-2xl shadow-lg w-80">
            <h2 class="text-white text-2xl font-semibold mb-6 text-center">Admin Login</h2>

            <!-- Success/Error Message -->
            <div class="alert-message" id="alert-message"></div>

            <form method="post">
                <div class="mb-4">
                    <label asp-for="Input.Email" class="block text-gray-300 mb-2">Email</label>
                    <input asp-for="Input.Email" class="w-full p-3 rounded-lg bg-[#2E2E2E] text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-fuchsia-500" placeholder="Enter email" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>
                <div class="mb-6">
                    <label asp-for="Input.Password" class="block text-gray-300 mb-2">Password</label>
                    <input asp-for="Input.Password" type="password" class="w-full p-3 rounded-lg bg-[#2E2E2E] text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-fuchsia-500" placeholder="Enter password" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
                </div>
                <button type="submit" class="w-full p-3 rounded-lg bg-fuchsia-500 hover:bg-fuchsia-600 text-white font-semibold transition duration-300">Login</button>

                <div class="text-center mt-4">
                    <a href="/Account/Login" class="text-fuchsia-500 hover:text-fuchsia-600 text-sm">Student Login</a>
                    <br />
                    <strong><a href="/Account/AdminRegister" class="text-fuchsia-500 hover:text-fuchsia-600 text-sm">Register New Account</a></strong>
                </div>
            </form>
        </div>

        <!-- Branding -->
        <div class="text-center md:text-left max-w-sm">
            <h1 class="text-white text-4xl font-bold mb-2">EduSphere</h1>
            <p class="text-gray-300 text-xl">Admin Panel</p>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

    <!-- Success/Error Message Handling -->
    <script>
        // Check if there's a success or error message in the ViewData
        @if (ViewData["SuccessMessage"] != null)
        {
            <text>
                        document.getElementById('alert-message').textContent = '@ViewData["SuccessMessage"]';
                        document.getElementById('alert-message').className = 'alert-message alert-success';
                        document.getElementById('alert-message').style.display = 'block';
            </text>
        }

        @if (ViewData["ErrorMessage"] != null)
        {
            <text>
                        document.getElementById('alert-message').textContent = '@ViewData["ErrorMessage"]';
                        document.getElementById('alert-message').className = 'alert-message alert-error';
                        document.getElementById('alert-message').style.display = 'block';
            </text>
        }
    </script>
</body>
</html>
