@page
@model StudentPortal.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-[#1A1A1A]">
    <div class="bg-[#292929] rounded-lg shadow-lg p-8 w-full max-w-lg">
        <h2 class="text-3xl font-bold text-white mb-6 text-center">Register</h2>
        <form method="post" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Input.FirstName" class="block text-white font-medium mb-1"></label>
                    <input asp-for="Input.FirstName"
                           class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                    <span asp-validation-for="Input.FirstName" class="text-red-400 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Input.LastName" class="block text-white font-medium mb-1"></label>
                    <input asp-for="Input.LastName"
                           class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                    <span asp-validation-for="Input.LastName" class="text-red-400 text-sm"></span>
                </div>
            </div>
            <div>
                <label asp-for="Input.Email" class="block text-white font-medium mb-1"></label>
                <input asp-for="Input.Email"
                       class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Input.Password" class="block text-white font-medium mb-1"></label>
                    <input asp-for="Input.Password" type="password"
                           class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                    <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-white font-medium mb-1"></label>
                    <input asp-for="Input.ConfirmPassword" type="password"
                           class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-400 text-sm"></span>
                </div>
            </div>
            <div>
                <label asp-for="Input.Phone" class="block text-white font-medium mb-1"></label>
                <input asp-for="Input.Phone"
                       class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                <span asp-validation-for="Input.Phone" class="text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="Input.DateOfBirth" class="block text-white font-medium mb-1"></label>
                <input asp-for="Input.DateOfBirth" type="date"
                       class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                <span asp-validation-for="Input.DateOfBirth" class="text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="Input.Address" class="block text-white font-medium mb-1"></label>
                <textarea asp-for="Input.Address"
                          class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400"></textarea>
                <span asp-validation-for="Input.Address" class="text-red-400 text-sm"></span>
            </div>
            <div>
                <label asp-for="Input.BankDetails" class="block text-white font-medium mb-1"></label>
                <input asp-for="Input.BankDetails"
                       class="w-full bg-[#3C3C3C] text-white border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring focus:border-blue-400" />
                <span asp-validation-for="Input.BankDetails" class="text-red-400 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-fuchsia-500 hover:bg-fuchsia-600 text-white font-bold py-2 px-4 rounded transition-colors">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
