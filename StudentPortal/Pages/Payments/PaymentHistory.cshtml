@page
@model StudentPortal.Pages.Payments.PaymentHistoryModel
@{
    ViewData["Title"] = "Payment History";
}

<div class="bg-[#1A1A1A] p-6">
    <div class="mx-auto rounded-lg p-8">
        <h2 class="text-3xl font-bold text-white mb-6 text-start">Payment History</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-600">
                <thead class="bg-[#3C3C3C]">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Payment Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Amount (MYR)</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Payment Method</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    @foreach (var payment in Model.Payments)
                    {
                        <tr class="hover:bg-[#3C3C3C]">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@payment.PaymentDate.ToString("g")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@payment.Amount.ToString("C", new System.Globalization.CultureInfo("ms-MY"))</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@payment.PaymentMethod</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
